load("@rules_cc//cc:defs.bzl", "cc_library")

# Vulkan-Headers library
cc_library(
    name = "vulkan_headers",
    hdrs = glob([
        "include/vulkan/**",
    ]),
    includes = ["include"],
    visibility = ["//visibility:public"],
)

# Vulkan-Registry library
cc_library(
    name = "vulkan_registry",
    data = glob([
        "registry/**",
    ]),
    includes = ["registry"],
    visibility = ["//visibility:public"],
)
